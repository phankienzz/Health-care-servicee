                                <li class="page-item page-item ${currentPage == 1 ? 'disabled' : ''}"><a href="invoice?page=${currentPage - 1}&from=${from}&to=${to}&status=${status}">Previous</a></li>
                                </c:if>

                            <c:forEach var="i" begin="1" end="${totalPages}">
